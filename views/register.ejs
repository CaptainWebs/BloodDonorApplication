                <!--</div>-->
          
                <button type="submit" style="width:100%;border-radius:5px;margin-top:20px;" id="regsubmit" class="login" disabled>Submit</button>
              
              </form>            
        </div>
        
    </div>
    
</div>

<script type="text/javascript">

function eligibility()
{
if (document.getElementById('qualification').checked == true)
  {
  document.getElementById('regsubmit').removeAttribute('disabled');
  }
else
  {
  document.getElementById('regsubmit').setAttribute('disabled','disabled');
  }
}
</script>


