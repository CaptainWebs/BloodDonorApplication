<% include partials/header%>
<div class="container" style="margin-top:80px;" onload="dateLoad();">
              <div class="row" style="width:100%;background:#4C6582;margin:0;padding:20px;padding-left:120px;color:white;">
                <h3><i class="far fa-edit"></i> Edit</h3>
            </div>
    <div class="row" style="margin-top:40px;">
        <div class="col-md-10 col-md-offset-1">
             <h3>Profile Information</h3>
             <h5 style="color:gray;">Please note that username can not be changed once registered.</h5>
            <hr>
                <form action="/update/<%=edituser._id%>/edit?_method=PUT" method="POST">
                 <div class="form-row row">
                  
                  <div class="form-group col-md-3">
                    <label for="exampleDropdownFormEmail1">First Name</label>
                    <input type="text" class="form-control" name="update[firstName]" value="<%=edituser.firstName%>" required>
                  </div>
                  <div class="form-group col-md-3">
                    <label for="exampleDropdownFormEmail1">Last Name</label>
                    <input type="text" class="form-control" name="update[lastName]" id="" value="<%=edituser.lastName%>" required>
                  </div>
                   <div class="form-group col-md-3">
                    <label for="gender">Gender</label>
                    <select name="update[gender]" class="form-control" value="<%=edituser.bloodType%>" style="width:100%;color:gray;" id="gender" required>
                        <% if(edituser.gender == "manuser"){ %>
                          <option selected="selected" value="manuser">Male</option>
                         <% }else{ %>
                        
                          <option selected="selected" value="womanuser">Female</option>
                        
                         <% } %>
                        
                        <option value="manuser">Male</option>
                        <option value="womanuser">Female</option>
                    </select>
                    
                    
                  </div>
                  <div class="form-group col-md-3">
                       <label for="exampleDropdownFormEmail1">Select Your Blood Type</label>
                  <select class="selectpicker" name="update[bloodType]" id="bloodselect" data-style="btn-info" multiple data-max-options="1" data-live-search="true" required 
                  style="background:red;">
 
                     <option selected="selected"><%=edituser.bloodType%> </option>
                                                        
                      <optgroup label="A group">
                       
                      <option id="A+">A+ (A Rhd positive)</option>
                       
                      <option id="A-">A- (A Rhd negative)</option>
                       
                      </optgroup>
                       
                      <optgroup label="B group">
                       
                      <option id="B+">B+ (B Rhd positive)</option>
                       
                      <option id="B-">B- (B Rhd negative)</option>

                      </optgroup>
                      <optgroup label="AB group">
                       
                      <option id="AB+">AB+ (AB Rhd positive)</option>
                       
                      <option id="AB-">AB- (AB Rhd negative)</option>

                      </optgroup>
                      <optgroup label="O group">
                       
                      <option id="O+">O+ (O Rhd positive)</option>
                       
                      <option id="O-">O- (O Rhd negative)</option>

                      </optgroup>
                       
                      </select>
                  </div>
                </div>
                <div class="form-row row">
                  <div class="form-group col-md-3">
                     <label for="country">Country</label>
                     <input type="text" style="width:100%;height:40px;color:gray;" class="form-control" name="update[country]" id="exampleDropdownFormEmail1" placeholder="City" value="<%=edituser.country%>" required>
                  </div>  
                  <div class="form-group col-md-3">
                      <label for="city">City</label>
                    <input type="text" style="width:100%;height:40px;color:gray;" class="form-control" name="update[city]" id="exampleDropdownFormEmail1" placeholder="City" value="<%=edituser.city%>" required>
                  </div>
        
                  <div class="form-group col-md-3">
                      <label for="address">Address</label>
                        <input  style="width:100%;height:40px;color:gray;" type="text" class="form-control" name="update[address]" value="<%=edituser.address%>"  id="exampleDropdownFormEmail1" placeholder="Address" required>
                  </div>
                  
                <div class="form-group col-md-3">
                    <label for="postcode">Postcode</label>
                  <input type="text" style="width:100%; height:40px;color:gray;" class="form-control" name="update[postcode]"  value="<%=edituser.postcode%>"  id="exampleDropdownFormEmail1" placeholder="Postcode">
                </div>
                  
                </div>
                
                <div class="form-row row">
                  <div class="form-group col-md-3">
                     
                    <% var monthPadding=''; %>
                    <% var dayPadding=''; %>
                    <% if((edituser.dob.getUTCMonth()+1) < 10){monthPadding='0'} %>
                    <% if((edituser.dob.getUTCDate()) < 10){dayPadding='0'} %>
 
                    <% date = edituser.dob.getUTCFullYear() + '-'+ monthPadding + (edituser.dob.getUTCMonth()+1) + '-'+ dayPadding + edituser.dob.getUTCDate(); %>
         
                    <label>Date of Birth</label>
                    <input type="date" name="update[dob]" value="<%=date%>"  class="form-control" id="dateField" placeholder="Date of Birth" required>
                  </div> 
                <div class="form-group col-md-3">
                  <label for="exampleDropdownFormEmail1">Mobile Phone</label>
                  <input type="tel" id="phone" class="form-control" value="<%=edituser.phoneNumber%>" name="phoneNumber" placeholder="for example: +44 775 157 2909" required>
                </div>
              
               
                  <div class="form-group col-md-3">
                  <label for="exampleDropdownFormEmail1">Email</label>
                  <input type="email" class="form-control" name="email"  value="<%=edituser.email%>" id="exampleDropdownFormEmail1" placeholder="please enter your email address" required>
                  </div>
                  <div class="form-group col-md-3">
                    <label for="exampleDropdownFormPassword1">Password</label>
                    <input type="password" class="form-control" name="password" value="" id="password" placeholder="please enter a strong password" required>
                    <!-- An element to toggle between password visibility -->
                    <input type="checkbox" onclick="myFunction()"> Show Password
                  </div>
                </div>
                <a href="/profile/<%=edituser.username%>"><button type="submit" value="Update" class="btn" style="background:#b02528;color:white;border:0 !important;height:40px;float:left;width:120px;"><i class="fas fa-arrow-left"></i> Back</button></a>
                <button type="submit" value="Update" class="btn" style="background:#4c6582;color:white;border:0 !important;height:40px;float:right;width:120px;"><i class="fab fa-medrt"></i> Update</button>
                </form>
        </div>
    </div>
</div>
<script>
    function myFunction() {
    var x = document.getElementById("password");
    if (x.type === "password") {
        x.type = "text";
    } else {
        x.type = "password";
    }
    }


</script>

<% include partials/footer%>