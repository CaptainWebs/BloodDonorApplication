<% include partials/header%>
<div class="container" style="width:100%;">
<div class="row" style="padding-top:100px;background: #200122;  /* fallback for old browsers */
                                    background: -webkit-linear-gradient(to right, #6f0000, #200122);  /* Chrome 10-25, Safari 5.1-6 */
                                    background: linear-gradient(to right, #6f0000, #200122);color:white;">

      <div class="col-md-8 col-md-offset-2">
        <h3 style="text-align:center;"><i class="fas fa-users"></i> Friend Requests</h3>
      </div>    
    </div>
</div>
<div class="row">
    <!--Sent Requests-->
    <div class="col-md-6" style="background:white;height:400px;">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <h4 style="text-decoration:underline;">Sent Requests <i class="fas fa-arrow-right redicon"></i></h4>
                
                <hr>
                <div class="row" style="margin-bottom:20px;">
                    <div class="col-md-6 col-md-offset-1">
                         <%friends2.forEach(function(friend){ %>
                
                        <span style="font-size:12px;">Date Sent: <%=friend.added.toDateString()%></span><br>
                        <h4>
                        <% if(friend.friend.gender == "manuser"){ %>
                        <i class="fas fa-male redicon"></i>
                        <% }else{ %>
                        <i class="fas fa-female redicon"></i>
                        <% } %>
                            Name:     <%=friend.friend.firstName%> <%=friend.friend.lastName%><br>
                        <span style="font-size:14px;padding-top:5px;">Username: <%=friend.friend.username%></span></h4>
                    
                       <% }) %>
                       
                    </div>
                    <div class="col-md-4">
                                    <button type="submit" class="btn btn-primary" style="    outline:none !important;    
                                            margin-top: 5px;
                                            border:none;
                                            width:100%;
                                            height: 40px;
                                            font-size: 14px;
                                        background:#232526;"><i class="fas fa-eye"></i> View Profile</button>
            
                                    <button type="submit" class="btn btn-primary" style="outline:none !important;    
                                                                    margin-top: 5px;
                                                                    border:none;
                                                                    width:100%;
                                                                    height: 40px;
                                                                    font-size: 14px;
                                                                background: #b13a3c;"><i class="fas fa-times"></i> Cancel Request</button>
                    </div>
                </div>

               
               
            </div>
        </div>
    </div>
    <!--Received Requests-->
    <div class="col-md-6" style="height:400px;">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <h4 style="text-decoration:underline;">Received Requests <i class="fas fa-arrow-right redicon"></i></h4>
                
                <hr>
                <div class="row">
                    <div class="col-md-6 col-md-offset-1">
                         <%friends.forEach(function(friend){ %>
                
                        <span style="font-size:12px;">Date Sent: <%=friend.added.toDateString()%></span><br>
                        <h4>
                        <% if(friend.friend.gender == "manuser"){ %>
                        <i class="fas fa-male redicon"></i>
                        <% }else{ %>
                        <i class="fas fa-female redicon"></i>
                        <% } %>
                            Name:     <%=friend.friend.firstName%> <%=friend.friend.lastName%><br>
                        <span style="font-size:14px;padding-top:5px;">Username: <%=friend.friend.username%></span></h4>
                    
                       <% }) %>
                       
                    </div>
                    <div class="col-md-4">
                                    <button type="submit" class="btn btn-primary" style="    outline:none !important;    
                                            margin-top: 5px;
                                            border:none;
                                            width:100%;
                                            height: 40px;
                                            font-size: 14px;
                                        background:#232526;"><i class="fas fa-eye"></i> View Profile</button>
            
                                    <button type="submit" class="btn btn-primary" style="outline:none !important;    
                                                                    margin-top: 5px;
                                                                    border:none;
                                                                    width:100%;
                                                                    height: 40px;
                                                                    font-size: 14px;
                                                                background: #b13a3c;"><i class="fas fa-times"></i> Cancel Request</button>
                    </div>
                </div>

               
               
            </div>
        </div>
    </div>
    
</div>

<% include partials/footer%>