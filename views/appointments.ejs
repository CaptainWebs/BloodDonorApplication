<% include partials/header%>
<div class="container" style="width:100%;">
   <div class="row redbutton gradientbg" style="padding-top:100px;padding-bottom:20px;">
      <div class="col-md-4 col-md-offset-1">
         <h2 style="text-align:center;"><i class="far fa-calendar-alt"></i> Appointments</h2>
      </div>
      <div class="col-md-4 col-md-offset-1">
         <div class="row">
            <div class="col-md-6">
               <a href="/centre" target="_blank"><button class="btn" style="background:#b02528;margin-top:20px;color:white;width:100%;height:40px;"><i class="fas fa-tint"></i> Find Blood Centre</button></a>
            </div>
            <div class="col-md-6">
               <a href="/nearby" target="_blank"><button class="btn" style="background:#2e3436;margin-top:20px;color:white;width:100%;height:40px;"><i class="fas fa-hospital"></i> Find Hospital</button></a>
            </div>
         </div>
      </div>
   </div>
</div>
<!--Looping through the appointments in:-->
<!--Pending, Received, Processing, Modified and displaying the appointment details-->
<div class="row">
   <div class="col-md-6">
      <div class="row" style="padding-top:20px;padding-bottom:20px;text-align:center;">
         <h4>Pending Appointments <i class="fas fa-arrow-right redicon"></i></h4>
         <hr>
      </div>
      <% pendingList.forEach(function(appointment){ %>
      <div class="row" style="padding:20px;margin:20px;background:#1B9CFC;border-radius:5px;color:white;">
         <div class="col-md-6"><i class="fas fa-user" style="font-size:16px;"></i> <i class="far fa-user" style="font-size:16px;"></i> You and <%=appointment.otherUsername%> </div>
         <div class="col-md-6"><i class="far fa-hospital" style="font-size:16px;"></i> Hospital: <%=appointment.hospitalName%></div>
         <div class="col-md-6"><i class="far fa-calendar" style="font-size:16px;"></i> Date: <%=appointment.date.toDateString()%></div>
         <div class="col-md-6"><i class="far fa-clock" style="font-size:16px;"></i> Time: <%=appointment.time%></div>
         <div class="row">
            <div class="col-md-4 col-md-offset-4" style="margin-top:20px;">
               <a href="/appointment/<%=appointment.random%>/cancel/"><button class="btn" style="background:#b02528;color:white;"> <i class="fas fa-times"></i> Cancel</button></a>
            </div>
         </div>
      </div>
      <% }) %>
   </div>
   <div class="col-md-6">
      <div class="row" style="padding-top:20px;padding-bottom:20px;text-align:center;">
         <h4><i class="fas fa-arrow-right redicon"></i> Received Appointments</h4>
         <hr>
      </div>
      <% receivedList.forEach(function(appointment){ %>
      <div class="row" style="padding:20px;margin:20px;background:#3B3B98;border-radius:5px;color:white;">
         <div class="col-md-6"><i class="fas fa-user"></i> <i class="far fa-user"></i> You and <%=appointment.otherUsername%> </div>
         <div class="col-md-6"><i class="far fa-hospital"></i> Hospital: <%=appointment.hospitalName%></div>
         <div class="col-md-6"><i class="far fa-calendar"></i> Date: <%=appointment.date.toDateString()%></div>
         <div class="col-md-6"><i class="far fa-clock"></i> Time: <%=appointment.time%></div>
         <div class="row">
            <div class="col-md-4" style="float:right;">
               <a href="/appointment/<%=appointment.random%>/confirm/<%=appointment.otherUsername%>"><button class="btn" style="background:#27ae60;color:white;"><i class="fas fa-check"></i> Confirm</button></a>
            </div>
            <div class="col-md-4" style="float:right;">
               <a href="/appointment/<%=appointment.random%>/modify"><button class="btn" style="background:#7f8c8d;color:white;"> <i class="far fa-edit"></i> Modify</button></a>
            </div>
         </div>
      </div>
      <% }) %>
   </div>
</div>
<div class="row" style="width:100%;height:5px;background:#b02528;margin:0;"></div>
<div class="row">
   <div class="col-md-6">
      <div class="row" style="padding-top:20px;padding-bottom:20px;text-align:center;">
         <h4><i class="fas fa-adjust redicon"></i> Processing Appointments</h4>
         <hr>
      </div>
      <% processingList.forEach(function(appointment){ %>
      <div class="row" style="padding:20px;margin:20px;background:#0fb9b1;border-radius:5px;">
         <div class="col-md-6" style="color:black;"><i class="fas fa-user"></i> <i class="far fa-user"></i> You and <%=appointment.otherUsername%> </div>
         <div class="col-md-6" style="color:black;"><i class="far fa-hospital"></i> Hospital: <%=appointment.hospitalName%></div>
         <div class="col-md-6" style="color:black;"><i class="far fa-calendar"></i> Date: <%=appointment.date.toDateString()%></div>
         <div class="col-md-6" style="color:black;"><i class="far fa-clock"></i> Time: <%=appointment.time%></div>
         <div class="row" style="text-align:center;">
            <div class="col-md-4 col-md-offset-1">
               <a href="/appointment/<%=appointment.random%>/confirm/<%=appointment.otherUsername%>"><button class="btn" style="background:#27ae60;color:white;"><i class="fas fa-check"></i> Confirm</button></a>
            </div>
            <div class="col-md-4 col-md-offset-1">
               <a href="/appointment/<%=appointment.random%>/cancel/"><button class="btn" style="background:#b02528;color:white;"> <i class="fas fa-times"></i> Cancel</button></a>
            </div>
         </div>
      </div>
      <% }) %>
   </div>
   <div class="col-md-6">
      <div class="row" style="padding-top:20px;padding-bottom:20px;text-align:center;">
         <h4><i class="far fa-edit redicon"></i> Modified Appointments</h4>
         <hr>
      </div>
      <% modifiedList.forEach(function(appointment){ %>
      <div class="row" style="padding:20px;margin:20px;background:#b2bec3;border-radius:5px;">
         <div class="col-md-6" style="color:black;"><i class="fas fa-user"></i> <i class="far fa-user"></i> You and <%=appointment.otherUsername%> </div>
         <div class="col-md-6" style="color:black;"><i class="far fa-hospital"></i> Hospital: <%=appointment.hospitalName%></div>
         <div class="col-md-6" style="color:black;"><i class="far fa-calendar"></i> Date: <%=appointment.date.toDateString()%></div>
         <div class="col-md-6" style="color:black;"><i class="far fa-clock"></i> Time: <%=appointment.time%></div>
         <div class="row">
            <div class="col-md-4 col-md-offset-4" style="margin-top:20px;">
               <a href="/appointment/<%=appointment.random%>/cancel/"><button class="btn" style="background:#b02528;color:white;"><i class="fas fa-times"></i> Cancel</button></a>
            </div>
         </div>
      </div>
      <% }) %>
   </div>
</div>
<% include partials/footer%>