<% include partials/header%>


    <div class="container" style="margin-top:120px;">
           <div class="row">
             <div class="col-md-6 col-md-offset-3">

                                        <% if(error && error.length > 0) { %>
       <div class="alert alert-danger"><p><%=error %></p></div>
     <% } %>
     
     <% if(success && success.length > 0) { %>
       <div class="alert alert-success"><p><i class="fas fa-sign-out-alt"></i> <%= success %></p></div>
     <% } %> 
             </div>
           </div>
           <div>
            <div class="col-md-3 hm-info">
             
           </div>
            <div class="col-md-3 hm-info2">
            
            </div>
            <div class="col-md-3 hm-info2">
            
            </div>
            <div class="col-md-3">
                   <div class="row">
                      <div class="col-md-10 col-md-offset-1 searchRight" style="background:#2E3436;color:white;border-radius:0px;">
                          <h2 style="color:white;text-align:center;">Search</h2>
                          <hr>
                                   <form class="px-4 py-3" action="/results" method="GET">
                              <div class="form-row">
                                  <div class="form-group col-md-12">
                                      <label for="exampleDropdownFormEmail1" style="color:white;"> Select Your Blood Type</label>
                                      <select class="selectpicker" name="bloodType" data-style="btn-info" multiple data-max-options="1" data-live-search="true" required>
                     
                                          <optgroup label="A group">
                                           
                                          <option>A+ (A Rhd positive)</option>
                                           
                                          <option>A- (A Rhd negative)</option>
                                           
                                          </optgroup>
                                           
                                          <optgroup label="B group">
                                           
                                          <option>B+ (B Rhd positive)</option>
                                           
                                          <option>B- (B Rhd negative)</option>
                    
                                          </optgroup>
                                          <optgroup label="AB group">
                                           
                                          <option>AB+ (AB Rhd positive)</option>
                                           
                                          <option>AB- (AB Rhd negative)</option>
                    
                                          </optgroup>
                                          <optgroup label="O group">
                                           
                                          <option>O+ (O Rhd positive)</option>
                                           
                                          <option>O- (O Rhd negative)</option>
                    
                                          </optgroup>
                                           
                                          </select>
                                      </div>
                              </div>
                              
                            <div class="form-row">
                      
                              <div class="form-group col-md-6">
                                <select name="country" class="countries" style="width:100%;height:40px;color:gray;" id="countryId" required>
                                    <option value="">Country</option>
                                </select>
                              </div>  
                              <div class="form-group col-md-6">
                                <input type="text" style="width:100%;height:40px;color:gray;" class="form-control" name="city" id="exampleDropdownFormEmail1" placeholder="City" required>
                              </div>
                            </div>
                            <div class="form-row">
                              <div class="form-group col-md-6">
                                 <input type="text" style="width:100%; height:40px;color:gray;" class="form-control" name="postcode" id="exampleDropdownFormEmail1" placeholder="Postcode">   
                              </div>
                              
                            <div class="form-group col-md-6">
                              <button class="btn-full-search" style="background:#b02528;color:white;" value="Search" type="submit"><i class="fa fa-search" aria-hidden="true"></i> Search</button>
                            </div>
                              
                            </div>
                            
                          </form>
                      </div>
                   </div> 
                </div>
         
        </div>
    </div>

    <div class="container" style="margin-top:40px;">
      <!-- Example row of columns -->
      <div class="row" style="background:#2e3436;padding-left:30px;">
        <div class="col-md-4" style="color:white;">
          <h3 class="redicon">Can I give blood?</h3>
          <p>Please check the page to see if you are eligible for blood donation.</p>
          <p><a class="btn btn-primary btn-full" href="#" role="button">Check Now</a></p>
        </div>
        <div class="col-md-4" style="background:white;;">
          <h3 class="redicon">Donation Process</h3>
          <p>Have not donated before? Check the process in detail to have more information.</p>
          <p><a class="btn btn-primary btn-full" href="#" role="button">Learn more</a></p>
       </div>
        <div class="col-md-4" style="color:white;">
          <h3 class="redicon">Become a Blood Donor</h3>
          <p>Please check the page to learn more information about how to become one.</p>
          <p><a class="btn btn-primary btn-full" href="#" role="button">Learn more</a></p>
        </div>
      </div>

     
 </div>     
<% include partials/footer%>